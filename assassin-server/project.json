{
	"name": "assassin-server",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "./assassin-server/src",
	"projectType": "application",
	"targets": {
		"build": {
			"dependsOn": ["assassin-common:build"],
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "tsc -p ./tsconfig.json"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["./assassin-server/**/*.{ts,tsx,js,jsx}"]
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "prettier --check ."
			}
		},
		"format:write": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "prettier --write ."
			}
		},
		"serve": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build", "assassin-server:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev"
			}
		},
		"serve:remote": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build", "assassin-server:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev --remote"
			}
		},
		"deploy": {
			"executor": "nx:run-commands",
			"dependsOn": [
				{
					"projects": ["assassin-server-spec", "assassin-server-docs", "assassin-app"],
					"target": "copy-to-dist",
					"params": "ignore"
				},
				"assassin-server:build"
			],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler deploy"
			},
			"inputs": [{ "fileset": "{projectRoot}/src/**/*.ts" }]
		},
		"tail": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler tail"
			}
		}
	},
	"tags": []
}
