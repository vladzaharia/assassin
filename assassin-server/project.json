{
	"name": "assassin-server",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "./assassin-server/src",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "tsc -p ./tsconfig.json"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["./assassin-server/**/*.{ts,tsx,js,jsx}"]
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "prettier --write ."
			},
			"inputs": ["{projectRoot}/**/*", "!{projectRoot}/dist/**/*"],
			"outputs": ["{projectRoot}/**/*", "!{projectRoot}/dist/**/*"]
		},
		"serve": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build", "assassin-server:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev"
			}
		},
		"serve-remote": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build", "assassin-server:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev --remote"
			}
		},
		"prepare-deploy": {
			"executor": "nx:run-commands",
			"dependsOn": [
				{
					"projects": ["assassin-server-spec", "assassin-server-docs", "assassin-app"],
					"target": "prepare-deploy",
					"params": "ignore"
				}
			],
			"options": {
				"command": "true"
			},
			"inputs": ["{projectRoot}/dist/**/*"]
		},
		"deploy": {
			"executor": "nx:run-commands",
			"dependsOn": ["prepare-deploy", "build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler deploy"
			},
			"inputs": ["{projectRoot}/dist/**/*", "{projectRoot}/src/**/*.ts", "{projectRoot}/wrangler.toml"]
		},
		"tail": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler tail"
			}
		}
	},
	"tags": []
}
