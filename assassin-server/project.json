{
	"name": "assassin-server",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "./assassin-server/src",
	"projectType": "application",
	"targets": {
		"build": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "tsc -p ./tsconfig.json"
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["./assassin-server/**/*.{ts,tsx,js,jsx}"]
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "prettier --check ."
			}
		},
		"format:write": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "prettier --write ."
			}
		},
		"serve": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev"
			}
		},
		"serve:remote": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler dev --remote"
			}
		},
		"deploy": {
			"executor": "nx:run-commands",
			"dependsOn": ["assassin-app:build", "assassin-server:deploy:openapi"],
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler deploy"
			}
		},
		"deploy:openapi": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "mkdir -p dist/openapi && cp postman/schemas/index.yaml dist/openapi/openapi.swagger"
			},
			"inputs": ["{projectRoot}/openapi.swagger"],
			"outputs": ["{projectRoot}/dist/openapi/openapi.swagger"]
		},
		"tail": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-server",
				"command": "wrangler tail"
			}
		}
	},
	"tags": []
}
