{
	"name": "assassin-common",
	"$schema": "../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "common/src",
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/js:tsc",
			"dependsOn": ["assassin-server-client:generate-sources"],
			"outputs": ["{options.outputPath}"],
			"options": {
				"outputPath": "dist/assassin-common",
				"main": "assassin-common/src/index.ts",
				"tsConfig": "assassin-common/tsconfig.lib.json",
				"assets": ["assassin-common/*.md"]
			}
		},
		"lint": {
			"executor": "@nx/linter:eslint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["assassin-common/**/*.ts"]
			}
		},
		"format": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-common",
				"command": "prettier --check ."
			}
		},
		"format:write": {
			"executor": "nx:run-commands",
			"options": {
				"cwd": "assassin-common",
				"command": "prettier --write ."
			}
		}
	},
	"tags": []
}
